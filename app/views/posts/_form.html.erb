<div class=post-content>
  <%= @post.content %>
</div>
<h1>Build a Post</h1>
<%= form_for post do |f| %>

  <!-- Post Title input -->
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>

  <!-- Text Area -->
  <%= f.label "Content" %>
  <%= f.text_area :content %><br>

  <!-- Checkbox for existing Categories -->
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <!-- Text input for New Category -->
  <%= f.fields_for :categories, @post.categories do |categories_fields| %>
    <%= categories_fields.text_field :name %><br>
  <% end %>

  <%= f.submit %>

<% end %>
